{
  "name": "api",
  "version": "1.0.0",
  "description": "Care-Pro API Service for caregiver verification and qualification",
  "main": "app.js",
  "scripts": {
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --detectOpenHandles --forceExit --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles --forceExit --passWithNoTests",
    "test:security": "jest --testPathPattern=security --detectOpenHandles --forceExit --passWithNoTests",
    "test:mandatory": "jest --testPathPattern=\"(security|unit/controllers|integration/critical)\" --detectOpenHandles --forceExit",
    "test:ci": "jest --ci --coverage --detectOpenHandles --forceExit --maxWorkers=2",
    "start": "nodemon app.js",
    "start:prod": "node app.js"
  },
  "keywords": [
    "caregiver",
    "verification",
    "qualification",
    "KYC",
    "Nigeria",
    "Africa"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.1",
    "openai": "^6.2.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "nock": "^13.4.0",
    "nodemon": "^3.1.10",
    "sinon": "^17.0.0",
    "supertest": "^6.3.3"
  }
}
